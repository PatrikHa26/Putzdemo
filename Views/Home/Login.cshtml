@{
    ViewData["Title"] = "Home Page";
}
<section>
    <div class="has-text-centered" id="LoginFeld">
        <h2>Login</h2>
        <form>
            <div class="field">
                <label class="label has-text-black">Username</label>
                
                    <input class="input is-success has-text-black" type="text" placeholder="Benutzer input">
            </div>
            <div class="field">
                <label class="label has-text-black">Passwort</label>
                <input class="input is-success has-text-black" type="text" placeholder="Passwort input">
            </div>
            <button class="button is-primary" asp-controller="Home" asp-action="home">Login</button>
        </form>
    </div>
</section>

